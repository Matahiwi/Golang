pipeline {
    agent any  // we only have one node (master), any selects that, we can define specific agents if required
    stages{
        stage("Format and Test"){
            steps{
                    sh "pwd"
                    sh "make format"
                    sh "make test"
            }
        }
        stage("Build"){
            steps{
                    sh "pwd"
                    sh "make build"
                    sh "make run_binary"
                    sh "make rm"
            }
        }
    }
}
